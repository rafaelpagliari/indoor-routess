<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Eventos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        h1 {
            background-color: #009688;
            color: #fff;
            padding: 20px;
            margin: 0;
        }

        form {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
            color: #333;
        }

        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background-color: #009688;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #007e6e;
        }
    </style>
</head>

<body>
    <h1>Cadastro de Eventos</h1>
    <form action="/cadastro-evento" method="post">
        <label for="tipo">Tipo:</label>
        <select name="tipo" id="tipo">
            <option value="sala">Sala</option>
            <option value="evento">Evento</option>
        </select>
        <br>

        <label for="titulo">Título:</label>
        <input type="text" name="titulo" id="titulo" required>
        <br>

        <label for="descricao">Descrição:</label>
        <textarea name="descricao" id="descricao"></textarea>
        <br>

        <label for="data">Data:</label>
        <input type="date" name="data" id="data">
        <br>

        <label for="id_locals">ID do Local:</label>
        <input type="text" name="id_locals" id="id_locals" required>
        <br>

        <input type="submit" value="Cadastrar Evento">
    </form>

    <div id="message"></div>

    <script>
        // Função para mostrar a mensagem de sucesso
        function showSuccessMessage(message) {
            const successMessage = document.getElementById('message');
            successMessage.innerText = message;
            successMessage.style.display = 'block';
        }
        // Manipulador de envio do formulário
        document.querySelector('form').addEventListener('submit', async (e) => {
            e.preventDefault(); // Impede o envio padrão do formulário
            const tipo = document.getElementById('tipo').value;
            const titulo = document.getElementById('titulo').value;
            const descricao = document.getElementById('descricao').value;
            const data = document.getElementById('data').value;
            const id_locals = document.getElementById('id_locals').value;
            // Enviar dados do formulário usando AJAX
            try {
                const response = await fetch('/cadastro-evento', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ tipo, titulo, descricao, data, id_locals }),
                });
                if (response.status === 200) {
                    const data = await response.json();
                    showSuccessMessage(data.message); // Exibe a mensagem de sucesso
                } else {
                    const data = await response.json();
                    alert('Erro ao cadastrar o evento: ' + data.message);
                }
            } catch (error) {
                console.error(error);
            }
        });
    </script>
</body>
</html>

