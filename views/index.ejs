<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Indoor Routes</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
    }

    h1 {
      background-color: #009688;
      color: #fff;
      padding: 20px;
      margin: 0;
    }

    form {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    label {
      font-weight: bold;
      color: #333;
    }

    select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    button {
      background-color: #009688;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #007e6e;
    }
  </style>
</head>
<body>
  <h1>Indoor Routes</h1>
  <form action="/directions" method="GET">
    <!-- Origem -->
    <label for="origem">Origem:</label>
    <select id="origem" name="origem">
      <% locals.forEach(local => { %>
        <option value="<%= local.id %>"><%= local.name %></option>
      <% }); %>
    </select>

    <!-- Destino -->
    <label for="destino">Destino:</label>
    <select id="destino" name="destino">
      <% locals.forEach(local => { %>
        <option value="<%= local.id %>"><%= local.name %></option>
      <% }); %>
    </select>

    <!-- BotÃ£o de busca -->
    <button type="submit">Buscar Rotas</button>
  </form>
</body>
</html>

